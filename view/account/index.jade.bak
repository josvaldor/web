extends ../theme

block append head-link
    link(rel='stylesheet', href='/genocan/css/account/index.css')
  

block content
    .content-wrapper
        if(typeof(employee) !== 'undefined')
            div#account-identification
                h2 #{employee.name}
                if(typeof(image) !== 'undefined')
                    img(src="data:image/jpeg;base64,#{image}",id="account-image")
            nav
                ul
                    if typeof(employeeMenu) !== 'undefined'
                        -var selected = 'home';
                        each val, key in employeeMenu
                            li
                                if selected === key
                                    a.button.selected(href=val, title=key)= key
                                else
                                    a.button(href=val, title=key)= key

        else if(typeof(contractor) !== 'undefined')
            div#account-identification
                h2 #{contractor.name}
            div#account-navigation
                ul
                  if typeof(employeeMenu) !== 'undefined'
                      -var selected = 'home';
                      each val, key in employeeMenu
                          li
                              if selected === key
                                  a.button.selected(href=val, title=key)= key
                              else
                                  a.button(href=val, title=key)= key
